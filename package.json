{
  "name": "@modyqyw/utils",
  "version": "2.0.1",
  "private": false,
  "description": "Shareable utils for different JavaScript/TypeScript projects.",
  "keywords": [
    "front-end, frontend, javascript, typescript, js, ts, utils"
  ],
  "homepage": "https://github.com/ModyQyW/utils#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "unpkg": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build && rollup -i ./src/index.ts -o ./dist/index.d.ts -f es -p dts",
    "commit": "cz",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install",
    "release": "release-it"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@sindresorhus/is": "~4.2.0",
    "@types/lodash-es": "~4.17.5",
    "@types/node": "~17.0.4",
    "@types/uuid": "~8.3.3",
    "@types/validator": "~13.7.0",
    "change-case": "~4.1.2",
    "lodash-es": "~4.17.21",
    "nanoid": "~3.1.30",
    "p-retry": "~5.0.0",
    "short-uuid": "~4.2.0",
    "ts-extras": "~0.7.0",
    "validator": "~13.7.0"
  },
  "devDependencies": {
    "@babel/core": "~7.16.5",
    "@babel/eslint-parser": "~7.16.5",
    "@commitlint/cli": "~15.0.0",
    "@modyqyw/fabric": "~4.5.0",
    "@typescript-eslint/eslint-plugin": "~5.8.0",
    "@typescript-eslint/parser": "~5.8.0",
    "cnpm": "~7.1.0",
    "commitizen": "~4.2.4",
    "eslint": "~8.5.0",
    "husky": "~7.0.4",
    "is-ci": "~3.0.1",
    "lint-staged": "~12.1.3",
    "markdownlint-cli": "~0.30.0",
    "prettier": "~2.5.1",
    "release-it": "~14.11.8",
    "rimraf": "~3.0.2",
    "rollup": "~2.61.1",
    "rollup-plugin-dts": "~4.0.1",
    "typescript": "~4.5.4",
    "vite": "~2.7.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
