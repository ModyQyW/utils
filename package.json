{
  "name": "@modyqyw/utils",
  "version": "1.1.0",
  "private": false,
  "description": "Shareable utils for different JavaScript/TypeScript projects.",
  "keywords": [
    "front-end, frontend, javascript, typescript, js, ts, utils"
  ],
  "homepage": "https://github.com/ModyQyW/utils#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "main": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "unpkg": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build && rollup -i ./src/index.ts -o ./dist/index.d.ts -f es -p dts",
    "commit": "cz",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install",
    "release": "release-it"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/async-retry": "~1.4.3",
    "@types/lodash-es": "~4.17.5",
    "@types/node": "~16.11.6",
    "@types/uuid": "~8.3.1",
    "@types/validator": "~13.6.5",
    "async-retry": "~1.3.3",
    "change-case": "~4.1.2",
    "lodash-es": "~4.17.21",
    "nanoid": "~3.1.30",
    "short-uuid": "~4.2.0",
    "validator": "~13.6.0"
  },
  "devDependencies": {
    "@babel/core": "~7.15.8",
    "@babel/eslint-parser": "~7.15.8",
    "@commitlint/cli": "~13.2.1",
    "@modyqyw/fabric": "~4.0.0-4",
    "@typescript-eslint/eslint-plugin": "~5.2.0",
    "@typescript-eslint/parser": "~5.2.0",
    "cnpm": "~7.1.0",
    "eslint": "~7.32.0",
    "husky": "~7.0.4",
    "is-ci": "~3.0.0",
    "lint-staged": "~11.2.4",
    "markdownlint-cli": "~0.29.0",
    "prettier": "~2.4.1",
    "release-it": "~14.11.6",
    "rimraf": "~3.0.2",
    "rollup": "~2.58.3",
    "rollup-plugin-dts": "~4.0.0",
    "typescript": "~4.4.4",
    "vite": "~2.6.11"
  },
  "engines": {
    "node": "^12.22.6 || ^14.17.6 || ^16.8.0",
    "npm": "^6.14.15 || ^7.21.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
