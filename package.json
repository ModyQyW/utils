{
  "name": "@modyqyw/utils",
  "version": "5.0.0",
  "private": false,
  "description": "Opinionated shareable utils for different JavaScript/TypeScript projects.",
  "keywords": [
    "javascript",
    "typescript",
    "js",
    "ts",
    "utils",
    "helpers"
  ],
  "homepage": "https://github.com/ModyQyW/utils#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "check:deps": "taze",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "pnpm run build --watch",
    "lint": "run-p lint:eslint lint:markdownlint lint:publint check:types test:coverage",
    "lint:eslint": "eslint . --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:publint": "publint",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm install && pnpm run lint && bumpp",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/prompt": "^17.6.1",
    "@modyqyw/fabric": "^7.5.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@sindresorhus/is": "^5.3.0",
    "@tsconfig/node18": "^2.0.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "bumpp": "^9.1.0",
    "c8": "^7.13.0",
    "commitizen": "^4.3.0",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.1",
    "markdownlint-cli": "^0.33.0",
    "npm-run-all": "^4.1.5",
    "p-debounce": "^4.0.0",
    "p-limit": "^4.0.0",
    "p-retry": "^5.1.2",
    "p-throttle": "^5.0.0",
    "prettier": "^2.8.8",
    "publint": "^0.1.11",
    "rollup": "^3.21.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "taze": "^0.9.1",
    "type-fest": "^3.8.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "packageManager": "pnpm@7.32.2",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
