{
  "name": "@modyqyw/utils",
  "version": "7.0.1",
  "private": false,
  "description": "Opinionated shareable utils for different JavaScript/TypeScript projects.",
  "keywords": [
    "javascript",
    "typescript",
    "js",
    "ts",
    "utils",
    "helpers"
  ],
  "homepage": "https://github.com/ModyQyW/utils#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "check:deps": "taze",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "pnpm run build --watch",
    "lint": "conc \"pnpm:lint:eslint\" \"pnpm:lint:markdownlint\" \"pnpm:lint:publint\"",
    "lint:eslint": "eslint . --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:publint": "publint",
    "prepare": "is-ci || simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm install && pnpm run lint && bumpp",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/prompt": "^17.6.6",
    "@modyqyw/fabric": "^8.3.2",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "@vitest/ui": "^0.32.2",
    "bumpp": "^9.1.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.18.10",
    "eslint": "^8.43.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "markdownlint-cli": "^0.35.0",
    "p-limit": "^4.0.0",
    "p-retry": "^5.1.2",
    "prettier": "^2.8.8",
    "publint": "^0.1.13",
    "rollup": "^3.26.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.11.0",
    "type-fest": "^3.12.0",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
