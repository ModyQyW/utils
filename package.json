{
  "name": "@modyqyw/utils",
  "version": "0.6.0",
  "description": "Shareable utils for different JavaScript/TypeScript projects.",
  "keywords": [
    "front-end, frontend, javascript, typescript, js, ts, utils"
  ],
  "homepage": "https://github.com/ModyQyW/utils#readme",
  "bugs": {
    "url": "https://github.com/ModyQyW/utils/issues"
  },
  "author": {
    "email": "wurui7@mail3.sysu.edu.cn",
    "name": "ModyQyW",
    "url": "https://modyqyw.github.io"
  },
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/utils.git"
  },
  "scripts": {
    "build": "tsc && vite build && rollup -i ./src/index.ts -o ./dist/index.d.ts -f es -p dts",
    "commit": "cz",
    "lint": "yarn run lint:json && yarn run lint:markdown && yarn run lint:script",
    "lint:json": "prettier ./**/*.json --write --ignore-path=.gitignore",
    "lint:markdown": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:script": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "prepare": "is-ci || husky install",
    "release": "release-it"
  },
  "dependencies": {
    "@types/async-retry": "~1.4.3",
    "@types/lodash-es": "~4.17.4",
    "@types/node": "~16.4.4",
    "@types/uuid": "~8.3.1",
    "@types/validator": "~13.6.3",
    "async-retry": "~1.3.1",
    "change-case": "~4.1.2",
    "lodash-es": "~4.17.21",
    "nanoid": "~3.1.23",
    "short-uuid": "~4.2.0",
    "validator": "~13.6.0"
  },
  "devDependencies": {
    "@babel/core": "~7.14.8",
    "@babel/eslint-parser": "~7.14.7",
    "@commitlint/cli": "~13.1.0",
    "@modyqyw/fabric": "~2.9.0-3",
    "@typescript-eslint/eslint-plugin": "~4.28.5",
    "@typescript-eslint/parser": "~4.28.5",
    "eslint": "~7.31.0",
    "husky": "~7.0.1",
    "is-ci": "~3.0.0",
    "lint-md-cli": "~0.1.2",
    "lint-staged": "~11.1.1",
    "markdownlint-cli": "~0.28.1",
    "prettier": "~2.3.2",
    "release-it": "~14.10.1",
    "rollup": "~2.55.0",
    "rollup-plugin-dts": "~3.0.2",
    "typescript": "~4.3.5",
    "vite": "~2.4.4",
    "vite-plugin-dts": "~0.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "^12 || ^14 || ^16",
    "npm": "^6 || ^7"
  }
}
